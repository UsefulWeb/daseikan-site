extra-bold = 800
color-primary = #fff
angle-skew-primary = 33.5deg

.header
  &__contacts
    &-container
      position relative
      padding 17px 0
      &:before
        content ''
        display block
        width 100%
        height 100%
        position absolute
        top 0
        left 0
        z-index 1
        transform skewX(-1*angle-skew-primary)
        background color-primary
    &-content
      position relative
      z-index 2
    &-phone
      float left
      display inline-block
    &-phone-number
      font-weight extra-bold
    &-social
      display inline-block
      float right
      margin 0
    &-social-item
      display inline-block
  &__logo
    color color-primary
    padding 38px 15px 50px 0
    position relative
    &:before
      content ''
      position absolute
      top 0
      left 0
      height 100% 
      width 100%
      background #000
      display block
      z-index 1
      transform skewX(-1*angle-skew-primary)
    &-content
      position relative
      z-index 2
    &-title
      display inline-block
      &_first-word
        font-weight extra-bold
  
  &__contact-item
    &-title
      &-text
        font-weight extra-bold
